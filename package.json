{
  "name": "catering",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "electron": "electron .",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "cross-env NEXT_BUILD_TARGET=electron next build && electron-builder build --win --publish never",
    "electron:build:mac": "cross-env NEXT_BUILD_TARGET=electron next build && electron-builder build --mac --publish never",
    "electron:build:all": "cross-env NEXT_BUILD_TARGET=electron next build && electron-builder build --win --mac --publish never"
  },
  "dependencies": {
    "@portone/browser-sdk": "^0.1.0",
    "@tailwindcss/postcss": "^4.1.13",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "swiper": "^12.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^32.2.8",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "^5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.picktoeat.catering",
    "productName": "픽투잇 케이터링",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/assets/logo.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/assets/logo.png",
      "category": "public.app-category.food-and-drink"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
